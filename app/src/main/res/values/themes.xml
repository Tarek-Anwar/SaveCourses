<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SaveCourses" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/base</item>
        <item name="colorPrimaryDark">@color/base</item>
        <item name="colorAccent">@color/base</item>
        <!-- Customize ActionBar style -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <!-- Customize ActionBar text style -->
        <item name="android:actionBarTabTextStyle">@style/CustomActionBarText</item>
        <!-- Customize ActionBar background -->
        <item name="android:navigationBarColor">@color/base</item>
    </style>

    <style name="Theme.SaveCourses" parent="Base.Theme.SaveCourses" />

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Customize ActionBar background -->
        <item name="android:background">@color/base</item>
    </style>

    <!-- Define your custom ActionBar text style -->
    <style name="CustomActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Customize ActionBar text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize ActionBar text size -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/base</item>
        <item name="android:background">@drawable/background_editext</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/base</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:radius">8dp</item>
        <item name="android:layout_margin">16dp</item>

    </style>

    <style name="TextViewStyleInList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>